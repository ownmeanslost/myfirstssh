<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.myfirstssh.resume.model.Kill" table="youkill">
		<id name="Guid" type="string">
			<column name="Guid" />
			<generator class="uuid" />
		</id>
		<property name="killContent" type="string" length="100" >
				<column name="killContent" >
                <comment>荣誉与技能</comment>
                </column>
		</property>
		<property name="userGuid" type="string" length="100" >
				<column name="userGuid" >
                <comment>信息主键</comment>
                </column>
		</property>
	</class>
</hibernate-mapping>
